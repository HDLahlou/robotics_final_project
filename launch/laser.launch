<launch>
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [waffle, waffle_pi]"/>
  <arg name="world" default="turtlebot3_laser.world"/>

  <include file="$(find robotics_final_project)/launch/empty_world.launch">
    <arg name="world_name" value="$(find robotics_final_project)/worlds/$(arg world)"/>
    <arg name="extra_client_args" value="-g libcustom_shadows.so"/>
    <arg name="paused" value="true"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description"
   command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro"/>

  <node name="laser_turtlebot_publisher" pkg="robot_state_publisher"
    type="robot_state_publisher" output="screen">
    <param name="publish_frequency" type="double" value="50.0"/>
  </node>

</launch>
